<%= form_with model: project do |f| %>
    <% if project.errors.any? %>
        <div class="errors">
            <h2><%= pluralize(project.errors.count, "error") %> prohibited </h2>
            <ul>
                <% project.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="actions">
      <%= f.submit %>
      <!--No need to provide button text -> Update Project-->
    </div>
<% end %>
